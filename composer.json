{
    "name": "jesperbeisner/fwstats",
    "description": "Statistics website for the worlds 'ActionFreewar' and 'ChaosFreewar' in the browser game 'freewar.de'.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jesper Beisner",
            "email": "jesper.beisner+github@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^9.5",
        "symplify/phpstan-rules": "^11.1"
    },
    "scripts": {
        "csfixer": "vendor/bin/php-cs-fixer fix --diff",
        "phpunit": "vendor/bin/phpunit --do-not-cache-result",
        "phpstan": "vendor/bin/phpstan",
        "test": {
            "csfixer": "@csfixer",
            "phpunit": "@phpunit",
            "phpstan": "@phpstan"
        }
    },
    "autoload": {
        "psr-4": {
            "Jesperbeisner\\Fwstats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jesperbeisner\\Fwstats\\Tests\\": "tests/",
            "Jesperbeisner\\Fwstats\\PHPStan\\": ".phpstan/src",
            "Jesperbeisner\\Fwstats\\PHPStan\\Tests\\": ".phpstan/tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
